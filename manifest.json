{
  "manifest_version": 3,
  "name": "Zepra",
  "version": "2.0.0",
  "description": "Survey helper: LLM answers, OCR, and IP info.",
  "action": {
    "default_popup": "login.html",
    "default_title": "Zepra",
    "default_icon": {
      "16": "icons/zepra.svg",
      "32": "icons/zepra.svg",
      "48": "icons/zepra.svg",
      "128": "icons/zepra.svg"
    }
  },
  "icons": {
    "16": "icons/zepra.svg",
    "32": "icons/zepra.svg",
    "48": "icons/zepra.svg",
    "64": "icons/zepra.svg",
    "128": "icons/zepra.svg",
    "256": "icons/zepra.svg"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "browsingData",
    "history",
    "downloads",
    "debugger",
    "offscreen",
    "tabCapture"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "src/media/*",
        "src/cutezepra.webm",
        "ask_zepra.css",
        "ask_zepra_v3.css",
        "ZEPRA_JSON_SYSTEM_PROMPT.txt",
        "offscreen.html",
        "dubbing/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "https://api.ocr.space/*",
    "https://ipapi.co/*",
    "https://api.ipify.org/*",
    "https://api.cerebras.ai/*",
    "https://api.ipdata.co/*",
    "https://ip-score.com/*",
    "https://api.mail.tm/*",
    "https://cloudflare-dns.com/*",
    "https://randomuser.me/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*",
    "https://translate.googleapis.com/*",
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src * data: blob:; worker-src 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "voice_styles.css"
      ],
      "js": [
        "voice_manager.js",
        "dubbing/zepra_audio_core.js",
        "dubbing/scout_manager.js",
        "dubbing/dubbing_studio.js",
        "dubbing/dubbing_manager.js",
        "content.js",
        "ask_zepra.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}